@model List<UserInRoleVM>
@{
    ViewData["Title"] = "Add Or Remove Users";
    var RoleId = ViewBag.RoleId;
}

<form method="post" class="form-group">

    <div class="card-header">
        <h2>Add Or Remove User In Role</h2>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {

        <input asp-for="@Model[i].IsSelected" type="checkbox" class="filled-in">
        <label asp-for="@Model[i].IsSelected">@Model[i].Name</label>
        <br /><br />
        <input type="hidden" asp-for="@Model[i].Id" />
        <input type="hidden" asp-for="@Model[i].Name" />

    }

    <div class="card-footer">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>


</form>

<a asp-controller="Roles" asp-action="Update" asp-route-id="@RoleId">Cancle</a>